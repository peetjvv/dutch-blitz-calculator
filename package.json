{
  "name": "dutch-blitz-calculator",
  "version": "0.0.1",
  "description": "Dutch Blitz Score Calculator",
  "main": "index.tsx",
  "scripts": {
    "test": "jest --coverage",
    "start": "webpack serve --env development --mode=development --host 0.0.0.0",
    "clean": "rimraf build",
    "webpack-build": "webpack --env production --mode=production",
    "build": "npm run clean && npm run webpack-build",
    "eslint": "eslint src --color --cache",
    "eslint:fix": "npm run lint -- --fix",
    "serve": "npm run build && http-server build --proxy http://localhost:8080?"
  },
  "author": "Peet Janse van Vuuren",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,scss,css,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "arrowParens": "avoid"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "lodash.debounce": "^4.0.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@testing-library/react": "^13.4.0",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/lodash.debounce": "^4.0.7",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.1",
    "husky": "^4.3.8",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "json-loader": "^0.5.7",
    "lint-staged": "^12.5.0",
    "modernizr-loader": "^1.0.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "sass": "^1.62.0",
    "sass-loader": "^13.2.2",
    "style-loader": "^3.3.2",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.79.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.2",
    "workbox-webpack-plugin": "^6.5.4"
  }
}
